<% 

if(product.offers){

    if(product.offers.offersArray.length){
        %>
    <script>
        window.offersArray = <%- JSON.stringify (product.offers.offersArray)%>
        window.selectedPackageOffer = <%= packageOffer; %>
    </script>

    <div class="art_product_price_tag">
        <div class="art_product_offer_desc">
            <h5>
                <%= lang_('Offers') %>
            </h5>
        </div>
        <div class="art_product_price_cards">

            <%
            product.offers.offersArray.map(offer=>{
                if(typeof offer.qt[0] !== 'string'){ 
                    %>

                <div class="art_price_card <%= cartItems[product.product_id] && (+cartItems[product.product_id].quantity === offer.qt[0] || ((+cartItems[product.product_id].quantity > offer.qt[0]) && +cartItems[product.product_id].quantity+1 <= offer.qt[1])) ? 'active':'' %>"
                    art-data-min="<%=offer.qt[0] %>" art-data-max="<%=offer.qt[1] %>">
                    <span class="art_late_price_off_tag"> -<%=  Math.abs(((product.price-offer.price)/offer.price)*100).toFixed(1) %>%</span>
                    <div class="art_price_card_header">
                        <div class="art_price_card_product">
                            <img src=" <%= path %><%= product.product_img %>" alt="">
                        </div>
                        <div class="art_price_card_product_offer">

                            <span class="art_pcs">
                    <p><%= offer.qt[0] %> to <%= offer.qt[1] %> Pieces </p>
                </span>
                            <span class="art_percentage_msg">
                    <h6>At <%= currency.name %> <%= formatMoney(offer.price*currency.rate) %></h6>
                </span>
                        </div>
                    </div>
                    <div class="art_price_card_body">
                        <p>Get
                            <%=  Math.abs(((product.price-offer.price)/offer.price)*100).toFixed(1) %>% off on all the products you purchase from
                                <%= offer.qt[0] %> -
                                    <%= offer.qt[1] %> pieces
                                        <b hidden> and save <%= currency.name %>
                                        <%= formatMoney(product.price-offer.price) %></b>
                        </p>
                        <div class="art_package_co">
                            <%- include ('./offer-box.ejs') %>
                        </div>
                    </div>
                    <div class="art_price_card_footer">
                        <button class="art_btn art_gree_btn filled waves-effect waves-light" onclick="choosePackage(event, '<%= product.product_id %>', ['<%= offer.qt[0] %>','<%= offer.qt[1] %>'])"><%= lang_("Choose") %> </button>
                    </div>
                </div>
                <% 
    } else {
        %>
                    <div class="art_price_card <%= cartItems[product.product_id] && +cartItems[product.product_id].quantity >= +offer.qt[0].split('>').join('') ? 'active':'' %>" art-data-min="<%=offer.qt[0] %>">
                        <span class="art_late_price_off_tag">-<%= ((product.price-offer.price)/offer.price)*100 %>% ðŸ”¥</span>
                        <div class="art_price_card_header">
                            <div class="art_price_card_product">
                                <img src="<%= path %><%= product.product_img %>" alt="">
                            </div>
                            <div class="art_price_card_product_offer">
                                <span class="art_pcs">
                                        <p><%= +offer.qt[0].split('>').join('') %> Pieces and above</p>
                                    </span>
                                <span class="art_percentage_msg">
                                   <h6>At <%= currency.name %> <%= formatMoney(offer.price*currency.rate) %></h6>
                                    </span>
                            </div>
                        </div>
                        <div class="art_price_card_body">
                            <p>Get crazy
                                <%=  Math.abs(((product.price-offer.price)/offer.price)*100).toFixed(1) %>% off on all the products you purchase from
                                    <%= offer.qt[0].split('>').join('') %> pieces and above <b hidden> and save <%= currency.name %>
                                        <%= formatMoney(product.price-offer.price) %></b></p>
                            <div class="art_package_co">
                                <%- include ('./offer-box.ejs') %>
                            </div>
                        </div>
                        <div class="art_price_card_footer">
                            <button class="art_btn art_gree_btn filled waves-effect waves-light" onclick="choosePackage(event, '<%= product.product_id %>', ['<%= offer.qt[0] %>','<%= offer.qt[1] %>'])"><%= lang_("Choose") %> </button>
                        </div>
                    </div>
                    <% 
           } %>


                        <%
        })
    
    %>
        </div>

    </div>
    <%
    } } %>